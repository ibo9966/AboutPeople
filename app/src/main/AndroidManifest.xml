<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baseline_people_24"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AboutPeople"
        tools:targetApi="31">
        <activity
            android:name=".DetayActivity"
            android:exported="false"
            android:label="Kullanıcı Detay Sayfası"/>
        <activity
            android:name=".UserListActivity"
            android:exported="false"
            android:label="Kayıtlı Kullanıcı Listesi" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Kullanıcı Kaydet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>